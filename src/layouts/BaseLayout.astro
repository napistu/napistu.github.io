---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Create and work with genome-scale mechanistic networks for biological pathway analysis" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --dark-green: #1a3a2e;
    --medium-green: #2d5f4a;
    --light-green: #4a7c59;
    --accent-green: #6b9e7f;
    --light-gray: #e8eae6;
    --medium-gray: #c4c8c1;
    --dark-gray: #5a5d57;
    --text-dark: #2a2d28;
    --white: #ffffff;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    line-height: 1.6;
    color: var(--text-dark);
    background-color: var(--light-gray);
  }

  a {
    color: var(--light-green);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--accent-green);
    text-decoration: underline;
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: 400;
  }

  code {
    font-family: "Courier New", monospace;
  }
</style>
