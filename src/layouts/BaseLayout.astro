---
import Header from '../components/Header.astro';
import ChatSidebar from '../components/ChatSidebar.astro';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Create and work with genome-scale mechanistic networks for biological pathway analysis" 
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <ChatSidebar />
  </body>
</html>

<style is:global>
  :root {
    --dark-green: #0d9488;    /* Teal 600 */
    --medium-green: #14b8a6;  /* Teal 500 */
    --light-green: #2dd4bf;   /* Teal 400 */
    --accent-green: #5eead4;  /* Teal 300 */
    --light-gray: #e8eae6;
    --medium-gray: #c4c8c1;
    --dark-gray: #5a5d57;
    --text-dark: #2a2d28;
    --white: #ffffff;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    line-height: 1.6;
    color: var(--text-dark);
    background-color: var(--light-gray);
  }

  a {
    color: var(--light-green);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--accent-green);
    text-decoration: underline;
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: 400;
  }

  code {
    font-family: "Courier New", monospace;
  }
</style>